window {
    width: 800px;
    height: 500px;
    transparency: "real";
    border: 2px;
    border-color: rgba(138, 173, 244, 0.93);
    border-radius: 10px;
    padding: 0;
}

mainbox {
    background-color: rgba(36, 39, 58, 0.93);
    border-radius: 8px;
    padding: 15px 20px;
}

inputbar {
    padding:    10px ;
    spacing:    0px ;
    text-color: @text;
    children: [ prompt, textbox-prompt-colon, entry ];
}


prompt {
    enabled: false;
}

textbox-prompt-colon {
    margin:     0px 0.3000em 0.0000em 0.0000em ;
    expand:     false;
    str:        "ï€‚ ";
    text-color: inherit;
}

entry {
    text-color:        @text;
    cursor:            text;
    spacing:           0;
    placeholder-color: @overlay2;
    placeholder:       "Search...";
}

listview {
    border: 0;
    padding: 15px 0 0 0;
    spacing: 6px;
}

element {
    padding: 6px 10px;
    border: 0;
    border-radius: 10px;
    background: transparent;
}


element normal.normal {
    color: @text;
}


element alternate.normal {
    background-color: transparent;
    color: @text;
}

element selected.normal {
    background-color: @mauve;
    color: @base;
}

element-icon {
    size: 40px;
}

element-text {
    padding: 7px 0;
}


